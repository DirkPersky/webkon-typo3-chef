{
	"name": "dirkpersky/webkon-typo3-chef",
	"description": "TYPO3 CMS Base Distribution - web kon",
	"type": "project",
	"repositories": [
		{ "type": "composer", "url": "https://composer.typo3.org/" }
	],
	"authors": [
		{
			"name": "Dirk Persky",
			"role": "Webdeveloper",
			"homepage": "http://dp-dvelop.de"
		}
	],
	"license": "GPL-2.0+",
	"require": {
		"typo3/cms-base-distribution": "v10.0.0",
		"typo3/cms-indexed-search": "v10.0.0",
		"typo3/cms-filemetadata":"@dev",
		"typo3/cms-lowlevel":"@dev",
		"typo3/cms-rsaauth":"@dev",
		"typo3/cms-adminpanel": "@dev",
		"typo3/cms-redirects": "@dev",

		"dirkpersky/typo3-dp_cookieconsent": "@stable",
		"dirkpersky/typo3-rte-ckeditor-fontawesome": "@stable",
		"gridelementsteam/gridelements": "@stable",
		"lochmueller/staticfilecache": "@stable",
		"georgringer/news": "@stable",
		"in2code/powermail":"@stable",
		"dirkpersky/typo3-composer" : "@stable",

		"helhum/typo3-console": "@stable",
		"clickstorm/cs_seo": "@stable",
		"sgalinski/scriptmerger": "@stable",
		"lochmueller/sourceopt": "@dev"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "public"
		}
	},
	"scripts": {
		"post-update-cmd": [
			"@webkon-symlink-version"
		],
		"post-install-cmd": [
			"@webkon-symlink-version"
		],
		"webkon-symlink-version": [
			"DirkPersky\\Typo3Composer\\Classes\\Installer::setVersion"
		],
		"typo3-cms-scripts": [
			"vendor/bin/typo3cms install:fixfolderstructure",
			"vendor/bin/typo3cms install:generatepackagestates"
		],
		"post-autoload-dump": [
			"@typo3-cms-scripts"
		]
	}
}
